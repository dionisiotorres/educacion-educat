<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="view_users_form_inherited_l10n_ec_base" model="ir.ui.view">
            <field name="name">inherited.res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <field name="signature" position="after">
                    <label for="signature_image"/>
                    <h2>
                        <field name="signature_image" widget="signature"/>
                    </h2>
                </field>
                <xpath expr="//page[@name='access_rights']" position="after">
                    <page string="Tiendas">
                        <group string="Tiendas">
                            <field string="Tiendas Permitidas" name="store_ids" widget="many2many_tags"/>
                            <field string="Tienda actual" name="store_id" context="{'user_preference': 0}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_store_user_preference_form" model="ir.ui.view">
            <field name="name">store.user.preference.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="store_id" domain="[('company_id', '=', company_id)]" readonly="0"
                           contest="{'user_preference':0}" options="{'no_create': True}"
                           groups="base_multi_store.group_multi_store"/>
                </field>
            </field>
        </record>

        <record id="action_user_admin" model="ir.actions.act_window">
            <field name="name">Usuarios</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="domain" eval="[('id','not in',[1,ref('base.user_admin')])]"></field>
<!--            <field name="domain">[('id','not in',[1,2])]</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_user_admin_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="base.view_users_form"/>
            <field name="act_window_id" ref="action_user_admin"/>
        </record>

        <record id="action_user_admin_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_users_tree"/>
            <field name="act_window_id" ref="action_user_admin"/>
        </record>


        <menuitem name="Usuarios" action="action_user_admin" id="menu_admin_user" parent="menu_main_admin"
                  sequence="10"/>


    </data>
</odoo>