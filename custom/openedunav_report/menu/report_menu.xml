<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Reports -->
        <menuitem id="sie_reports_menu"
                  name="Reportes"
                  parent="openedunav_core.sie_main_menu"
                  sequence="4"/>
        <menuitem id="certificate_evaluation_menu"
                  name="Certificado de Evaluacion"
                  action="certificate_evaluation_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_admin"
                  sequence="1"/>
        <menuitem id="sie_report_aguena_score"
                  name="Scores"
                  action="score_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_admin"
                  sequence="2"/>
        <menuitem id="sie_report_aguena_score_professor"
                  name="Calificaciones"
                  action="score_professor_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_admin"
                  sequence="3"/>
        <menuitem id="sie_report_aguena_score_student"
                  name="Scores Student"
                  action="score_student_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_student"
                  sequence="4"/>
        <menuitem id="sie_report_aguena_integrator_product"
                  name="Integrator Product"
                  action="integrator_product_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_admin"
                  sequence="5"/>
        <menuitem id="sie_report_aguena_integrator_product_student"
                  name="Integrator Product Student"
                  action="integrator_product_student_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_student"
                  sequence="6"/>
        <menuitem id="sie_report_aguena_certificate_menu"
                  name="Certificate"
                  action="certificate_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_admin"
                  sequence="7"/>
        <menuitem id="sie_report_aguena_subject_menu"
                  name="Subject"
                  action="subject_wizard_action"
                  parent="sie_reports_menu"
                  groups="base.group_system,openedunav_core.group_admin"
                  sequence="8"/>

        <report id="sie_score_act_menu"
                model="sie.score"
                string="Acta de Calificaciones"
                report_type="qweb-pdf"
                name="openedunav_report.report_score_act"
                file="openedunav_report.report_score_act"/>
        <report id="sie_subject_act_menu"
                model="sie.subject"
                string="Subject Report"
                report_type="qweb-pdf"
                name="openedunav_report.report_subject_act"
                file="openedunav_report.report_subject_act"/>
        <record id="sie_score_act"
                model="report.paperformat">
            <field name="name">Act A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">1</field>
            <field name="dpi">90</field>
        </record>
        <record id="sie_score_act_menu"
                model="ir.actions.report">
            <field name="paperformat_id" ref="sie_score_act"/>
        </record>
        <record id="sie_subject_act_menu"
                model="ir.actions.report">
            <field name="paperformat_id" ref="sie_score_act"/>
        </record>
    </data>
</openerp>