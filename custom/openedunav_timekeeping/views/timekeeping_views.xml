<openerp>
    <data>
        <record id="view_sie_timekeeping_tree" model="ir.ui.view">
            <field name="name">sie.timekeeping.tree</field>
            <field name="model">sie.timekeeping</field>
            <field name="arch" type="xml">
                <tree string="timekeeping">
                    <field name="course_id"/>
                    <field name="subject_id"/>
                    <field name="faculty"/>
                    <field name="unit_id"/>
                    <field name="date"/>
                    <field name="number_of_hours"/>
                </tree>
            </field>
        </record>
        <record id="view_sie_timekeeping_form" model="ir.ui.view">
            <field name="name">sie.timekeeping.form</field>
            <field name="model">sie.timekeeping</field>
            <field name="arch" type="xml">
                <form string="timekeeping">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="course_id" options='{"no_open":True}'
                                   attrs="{'readonly':[('create_date', '!=', False)]}"/>
                            <field name="subject_id" options='{"no_open":True}'
                                   attrs="{'readonly':[('create_date', '!=', False)]}"/>
                            <field name="faculty"/>
                            <field name="date"/>
                            <field name="number_of_hours"/>
                            <field name="unit_id" options='{"no_open":True}'/>
                            <field name="create_date" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_sie_timekeeping_search" model="ir.ui.view">
            <field name="name">sie.timekeeping.search</field>
            <field name="model">sie.timekeeping</field>
            <field name="arch" type="xml">
                <search string="timekeeping">
                    <field name="name" select="True"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_sie_timekeeping_view">
            <field name="name">Timekeeping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sie.timekeeping</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sie_timekeeping_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new timekeeping.
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_timekeeping_view_form">
            <field name="act_window_id" ref="act_open_sie_timekeeping_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sie_timekeeping_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_sie_timekeeping_view_tree">
            <field name="act_window_id" ref="act_open_sie_timekeeping_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sie_timekeeping_tree"/>
        </record>
    </data>
</openerp>